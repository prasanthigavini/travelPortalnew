<a href="{{ submitted_data['node_url'] }}">Click to Access Travel Request</a>
{% if submitted_data['moderation_state'] == 'draft' %}
    <div>This request is pending for approval by {{ submitted_data['manager_name'] }}</div>
{% elseif submitted_data['moderation_state'] == 'pm_approved' %}
    <div>This request is pending for approval by {{ submitted_data['dlt_name'] }}</div>
{% endif %}
<table align="center" border="1" cellpadding="0" cellspacing="0" width="100%"  height="auto" style="font-family:Calibri;">
	     <thead>
		   <th colspan="8" height="40px" bgcolor="#8794a0">Trip Request - {{ submitted_data['node_title'] }} - {{ submitted_data['travel_id'] }}</th>
		 </thead>
                 <tr>
                    <th width="10%" height="20" bgcolor="#C6CDE3">Requested Date</th>
                    <th width="10%" bgcolor="#C6CDE3">Requester Emp ID</th>
                    <th width="10%" bgcolor="#C6CDE3">Requester Name</th>
                    <th width="10%" bgcolor="#C6CDE3">Requester Contact</th>
                    <th width="10%" bgcolor="#C6CDE3">Travel Type</th>
                    <th width="10%" bgcolor="#C6CDE3">Travel Way</th>
                    <th width="10%" bgcolor="#C6CDE3">Mode of Travel</th>
                    <th width="30%" bgcolor="#C6CDE3">Justification for deviation from flight eligibility</th>
                 </tr>
                 <tr>
                <td width="10%" height="20">{{ submitted_data['requested_date'] }}</td>
                <td width="10%" >{{ submitted_data['emp_id'] }}</td>
                <td width="10%" >{{ submitted_data['requester_name'] }}</td>
                <td width="10%" >{{ submitted_data['contact'] }}</td>
                <td width="10%" >{{ submitted_data['travel_type'] }}</td>
                <td width="10%" >{{ submitted_data['travel_way'] }}</td>
                <td width="10%" >{{ submitted_data['travel_mode'] }}</td>
                <td width="30%" style="border: 1px solid red;">{{ submitted_data['eligibility_justification'] }}</td>
             </tr>
             <tr>
                <td colspan="8" height="20"></td>
             </tr>
          </table>
	  <table align="center" border="1" cellpadding="0" cellspacing="0"  height="150" style="font-family:Calibri;">
         <thead>
            <th colspan="11" height="40px" bgcolor="#8794a0">Traveler Details</th>
         </thead>	 
         <tr>
            <th width="100" height="20" bgcolor="#C6CDE3">Type</th>
            <th width="100" bgcolor="#C6CDE3">Name</th>
            <th width="100" bgcolor="#C6CDE3">Employee ID</th>
            <th width="100" bgcolor="#C6CDE3">Email</th>
            <th width="100" bgcolor="#C6CDE3">Band</th>
            <th width="100" bgcolor="#C6CDE3">Passport No</th>
            <th width="100" bgcolor="#C6CDE3">Passport Validity</th>
            <th width="100" bgcolor="#C6CDE3">Visa Available</th>
            <th width="100" bgcolor="#C6CDE3">Visa Validity</th>
            <th width="100" bgcolor="#C6CDE3">Emergency Contact</th>
            <th width="400" bgcolor="#C6CDE3">Emergency Contact Person</th>
         </tr>
         {% for key, traveler in submitted_data['traveler_details'] %}
         <tr>
            <td width="200" height="20">{{ traveler.traveler_type }}</td>
            <td width="200" >{{ traveler.traveller_name }}</td>
            <td width="200" >{{ traveler.traveler_empid }}</td>
            <td width="200" >{{ traveler.traveler_email }}</td>
            <td width="200" >{{ traveler.traveler_emp_band }}</td>
            <td width="200" >{{ traveler.traveler_passport_number }}</td>
            <td width="200" >{{ traveler.traveler_passport_validity }}</td>
            <td width="200" >{{ traveler.traveler_visa_availability }}</td>
            <td width="200" >{{ traveler.traveler_visa_validity }}</td>
            <td width="200" >{{ traveler.traveler_emergency_contact }}</td>
            <td width="200" >{{ traveler.traveler_emergency_contact_person }}</td>
         </tr>
          {% endfor %}   
          <tr>
            <td colspan="11" height="20"></td>
         </tr>
      </table>
      <table align="center" border="1" cellpadding="0" cellspacing="0"  height="150" style="font-family:Calibri;">
         <thead>
            <th colspan="12" height="40px" bgcolor="#8794a0">Itinerary Details</th>
         </thead>
         <tr>
            <th width="100" height="20" bgcolor="#C6CDE3">From Country</th>
            <th width="100" bgcolor="#C6CDE3">From City</th>
            <th width="100" bgcolor="#C6CDE3">To Country</th>
            <th width="100" bgcolor="#C6CDE3">To City</th>
            <th width="100" bgcolor="#C6CDE3">Date of Depature</th>
            <th width="100" bgcolor="#C6CDE3">Return Date</th>
            <th width="100" bgcolor="#C6CDE3">Date of Reporting</th>
            <th width="100" bgcolor="#C6CDE3">Time of Reporting</th>
            <th width="100" bgcolor="#C6CDE3">Accomodation required</th>
            <th width="100" bgcolor="#C6CDE3">Accomodation Preference</th>
            <th width="100" bgcolor="#C6CDE3">Preferred Address</th>
            <th width="400" bgcolor="#C6CDE3">Justification from deviation</th>
         </tr>
         {% for key, itinerary in submitted_data['itineraries'] %}
         <tr>
            <td width="200" height="20">{{ itinerary.from_country }}</td>
            <td width="200" >{{ itinerary.from_city }}</td>
            <td width="200" >{{ itinerary.to_country }}</td>
            <td width="200" >{{ itinerary.to_city }}</td>
            <td width="200" >{{ itinerary.departure }}</td>
            <td width="200" >{{ itinerary.return }}</td>
            <td width="200" >{{ itinerary.reporting_date }}</td>
            <td width="200" >{{ itinerary.reporting_time }}</td>
            <td width="200" >{{ itinerary.accommodation }}</td>
            <td width="200" >{{ itinerary.accommodation_prefered }}</td>
            <td width="200" >{{ itinerary.accommodation_address }}</td>
            <td width="200" style="border: 1px solid red;">{{ itinerary.justification }}</td>
         </tr>
         {% endfor %}
         <tr>
            <td colspan="12" height="20"></td>
         </tr>
      </table>
      <table align="center" border="1" cellpadding="0" cellspacing="0" width="100%"  height="auto" style="font-family:Calibri;">
         <thead>
            <th colspan="8" height="40px" bgcolor="#8794a0">Project Details</th>
         </thead>
         <tr>
            <th height="20" bgcolor="#C6CDE3">Project Name</th>
            <th bgcolor="#C6CDE3">Client</th>
            <th bgcolor="#C6CDE3">Travel Category</th>
            <th bgcolor="#C6CDE3">Travel Sub Category</th>
            <th bgcolor="#C6CDE3">Business Justification</th>
            <th bgcolor="#C6CDE3">SFID for Sales</th>
            <th bgcolor="#C6CDE3">Additional Details</th>
         </tr>
         <tr>
            <td height="20">{{ submitted_data['project_name'] }}</td>
            <td>{{ submitted_data['client_name'] }}</td>
            <td>{{ submitted_data['travel_category'] }}</td>
            <td>{{ submitted_data['travel_sub_category'] }}</td>
            <td>{{ submitted_data['business_justification'] }}</td>
            <td>{{ submitted_data['sfid'] }}</td>
            <td>{{ submitted_data['additional_details'] }}</td>
         </tr>
         <tr>
            <td colspan="8" height="20"></td>
         </tr>
      </table>
      {% if submitted_data['moderation_state'] != 'draft' %}
      <table align="center" border="1" cellpadding="0" cellspacing="0" width="100%"  height="auto" style="font-family:Calibri;">
         <thead>
            <th colspan="4" height="40px" bgcolor="#8794a0">Approval Details</th>
         </thead>
         <tr>
            <th height="20" bgcolor="#C6CDE3">Approver 1 (Project Manager)</th>
            <th bgcolor="#C6CDE3">Approved On</th>
            <th bgcolor="#C6CDE3">Approver 2 (DLT)</th>
            <th bgcolor="#C6CDE3">Approved On</th>
         </tr>
         <tr>
            <td height="20">{{ submitted_data['manager_name'] }}</td>
            {% if submitted_data['moderation_state'] == 'pm_approved' %}
		<td>{{ "now"|date('d-M-y') }}</td>
            {% elseif submitted_data['moderation_state'] == 'closed' and submitted_data['manager_name'] is not empty %}
		<td>{{ submitted_data['last_updated'] }}</td>
            {% elseif submitted_data['moderation_state'] == 'published' and submitted_data['manager_name'] is not empty %}
		<td>{{ submitted_data['pm_updated'] }}</td>
            {% else %}
		<td></td>
            {% endif %}
            <td>{{ submitted_data['dlt_name'] }}</td>
            {% if submitted_data['moderation_state'] == 'closed' and submitted_data['dlt_name'] is not empty %}
		<td>{{ "now"|date('d-M-y') }}</td>
            {% elseif submitted_data['moderation_state'] == 'published' and submitted_data['dlt_name'] is not empty %}
		<td>{{ submitted_data['dlt_updated'] }}</td>
            {% else %}
		<td></td>
            {% endif %}
         </tr>
         <tr>
            <td colspan="4" height="20"></td>
         </tr>
      </table>
	{% endif %}	
      <br />
       <div> --  Travel Portal team </div>
